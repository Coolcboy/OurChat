<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/space_bg"
    android:clipChildren="false">

    <FrameLayout
        android:id="@+id/fragmentContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipChildren="false"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:clipChildren="false">
        <RadioGroup
            android:id="@+id/rbv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checkedButton="@id/rb1"
            android:orientation="horizontal"
            android:background="@drawable/white_layer">
            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/menu_message_selector"
                android:gravity="center"
                android:maxLines="1"
                android:padding="6dp"
                android:drawablePadding="2dp"
                android:text="@string/menu_message"
                android:textColor="@color/bottom_menu_selector"
                android:textSize="12sp"/>
            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/menu_friend_selector"
                android:gravity="center"
                android:maxLines="1"
                android:padding="6dp"
                android:drawablePadding="2dp"
                android:text="@string/menu_friend"
                android:textColor="@color/bottom_menu_selector"
                android:textSize="12sp"/>

            <RadioButton
                android:id="@+id/rb4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:drawableTop="@drawable/menu_me_selector"
                android:gravity="center"
                android:maxLines="1"
                android:padding="6dp"
                android:drawablePadding="2dp"
                android:text="@string/menu_me"
                android:textColor="@color/bottom_menu_selector"
                android:textSize="12sp"/>
        </RadioGroup>
    </RelativeLayout>
</LinearLayout>
