<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/title_wx">

    <include layout="@layout/toolbar_common"/>

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/author_avatar"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_shape" />

    <TextView
        android:id="@+id/ztQQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_selector"
        android:paddingLeft="@dimen/size_16dp"
        android:paddingRight="@dimen/size_16dp"
        android:paddingTop="@dimen/size_12dp"
        android:paddingBottom="@dimen/size_12dp"
        android:gravity="center_vertical"
        android:text="@string/author_qq"
        android:textColor="@color/text_3"
        android:textSize="@dimen/size_26sp"
        android:drawablePadding="@dimen/size_6dp"
        android:layout_marginTop="@dimen/size_15dp"/>

    <TextView
        android:id="@+id/ztStudy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_selector"
        android:paddingLeft="@dimen/size_16dp"
        android:paddingRight="@dimen/size_16dp"
        android:paddingTop="@dimen/size_12dp"
        android:paddingBottom="@dimen/size_12dp"
        android:gravity="center_vertical"
        android:text="欢迎过来交流学习"
        android:textColor="@color/text_3"
        android:textSize="@dimen/size_26sp"
        android:drawablePadding="@dimen/size_6dp"
        android:layout_marginTop="@dimen/size_15dp"/>


</LinearLayout>